<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Restaurant Reviews"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_restaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title" />

    <Button
        android:id="@+id/btn_CustomerFeed_return_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"     android:minHeight="0dp"    android:padding="8dp"      android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:textSize="12sp"    android:text="Return" />

</RelativeLayout>