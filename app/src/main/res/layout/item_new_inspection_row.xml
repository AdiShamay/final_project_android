<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_row_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textColor="#009688"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_row_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="Violation Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violation Points:"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_row_points"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@android:drawable/edit_text"
                android:inputType="number"
                android:gravity="center"
                android:hint="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0 = Pass)"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inspector Remarks:"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/et_row_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type details here..."
                android:textSize="14sp"
                android:background="@android:drawable/edit_text"
                android:minHeight="48dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>