<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Registration"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/res_name_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name" />

        <EditText
            android:id="@+id/et_rest_email_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/res_id_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business ID / Tax Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/res_address_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Address" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proof of Ownership (License Image):"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btn_upload_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Business License"
            android:backgroundTint="#808080" />

        <EditText
            android:id="@+id/res_password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_finish_rest_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Registration"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>