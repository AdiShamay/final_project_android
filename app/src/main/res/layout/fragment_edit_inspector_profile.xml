<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Inspector Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_insp_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Israel Cohen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_insp_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cohen@inspector.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company / Organization"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_insp_edit_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Health Dept." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Number (Read Only)"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIC-998877"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/et_insp_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_insp_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:layout_marginTop="30dp"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>
</ScrollView>