<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_inspector_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Inspector Cohen"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btn_inspector_logout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Logout"
            android:textSize="12sp"
            android:backgroundTint="#D32F2F"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E0F7FA"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Scheduled Inspection"
                android:textColor="#006064"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_next_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushi Place TLV"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#006064" />

            <TextView
                android:id="@+id/tv_next_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 14:00"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_next_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rothschild Blvd 10, Tel Aviv"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_start_new_inspection"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start New Inspection Report"
        android:textSize="16sp"
        android:backgroundTint="#009688"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_view_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Future Schedule"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_inspector_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Past Inspections"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_inspector_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messages (2 New)"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_inspector_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit My Profile"
            android:backgroundTint="#555555" />

    </LinearLayout>
</LinearLayout>